<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomRoundedButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_shape</item>
        <!-- Anda bisa menambahkan atribut lain seperti padding, textColor, dll. -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="CustomTextView18Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Warna teks ActionBar menjadi putih -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
